{
  "name": "pharos-vault",
  "version": "1.0.0",
  "description": "Pharos Vault Infrastructure - ERC4626 compliant vault with yield strategies for RWA assets",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:pharos-testnet": "npx hardhat run scripts/deploy-pharos-testnet.ts --network pharosTestnet",
    "deploy:sepolia": "npx hardhat run scripts/deploy-pharos-testnet.ts --network sepolia",
    "deploy:pharos": "npx hardhat run scripts/deploy.ts --network pharos",
    "deploy:oracle": "npx hardhat run scripts/deploy-oracle.ts --network localhost",
    "deploy:oracle:pharos": "npx hardhat run scripts/deploy-oracle.ts --network pharosTestnet",
    "oracle:node": "npx hardhat run scripts/oracle-node.ts --network localhost",
    "oracle:node:pharos": "npx hardhat run scripts/oracle-node.ts --network pharosTestnet",
    "allocate": "npx hardhat run scripts/allocate-funds.ts --network pharosTestnet",
    "simulate:yield": "npx hardhat run scripts/simulate-yield.ts --network sepolia",
    "simulate:yield:pharos": "npx hardhat run scripts/simulate-yield.ts --network pharosTestnet",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "verify": "npx hardhat verify --network pharosTestnet"
  },
  "keywords": [
    "vault",
    "erc4626",
    "defi",
    "yield",
    "rwa",
    "pharos"
  ],
  "author": "Pharos Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.28.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
